<li class="grid__item">
    <a class="grid__content" href="{{ video.url }}">
        {% if video.data.thumbnail %}<img src="{{ video.data.thumbnail }}" class="grid__thumb">{% endif %}
        <div class="grid__category category">{{ video.data.category }}</div>
        <h3 class="grid__headline">{{ video.data.title }}</h3>
        <p class="grid__description">{{ video.data.description }}</p>

    </a>
</li>